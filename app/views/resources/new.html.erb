<% if @resource.research_goal %>
  <h1>Add A New Resource for <%= @resource.title %> </h1>
<% else %>
  <h1>Add A New Resource</h1>
<% end %>

<%# move this to a partial %>
<% if @resource.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@resource.errors.count, "error") %> prohibited this resource from being saved:</h2>
 
    <ul>
    <% @resource.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>


<%= form_for ([@resource.research_goal, @resource]) do |f| %>
  
    <%= f.label :title %>
    <%= f.text_field :title %>
    <br>
    <%= f.label :key_topics %>
    <%= f.text_field :key_topics %>
    <br>
  
  <%= f.submit "Add Resource" %>
   
<% end %>
