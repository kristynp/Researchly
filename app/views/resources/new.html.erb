<% if @research_goal %>
  <h1>Add A New Resource for the <%= @research_goal.name %> goal </h1>
<% else %>
  <h1>Add A New Resource</h1>
<% end %>

<%# move this to a partial %>
<% if @resource.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@resource.errors.count, "error") %> prohibited this resource from being saved:</h2>
 
    <ul>
    <% @resource.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for ([@research_goal, @resource]) do |f| %>
  
    <%= f.label :title %>
    <%= f.text_field :title %>
    <br>

    <%= f.label :key_topics %>
    <%= f.text_field :key_topics %><br><br>

    <%= f.label :journal_id %>
    <br>
    <label for="journal_id">Choose existing journal: </label>
    <%= f.collection_select :journal_id, Journal.all, :id, :name, :prompt => '- Select -' %>
    <p> --OR-- </p>

    <p>Add New Journal</p>
    
    <%= f.fields_for :journals do |journal| %>

      <%= journal.label :name %>
      <%= journal.text_field :name %><br>

      <%= journal.label :website %>
      <%= journal.text_field :website %><br>

      <%= journal.label :open_source %>
      <%= journal.select :open_source, [['Yes', true], ['No', false], ], { :include_blank => true } %><br>

    <% end %>


    <%= f.hidden_field :research_goal_id %>
    <br>
  
  <%= f.submit "Add Resource" %>
   
<% end %>
