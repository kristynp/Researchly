<h1>Add Journal</h1>

<% if @journal.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@journal.errors.count, "error") %>
      prohibited this journal from being saved:
    </h2>
 
    <ul>
    <% @journal.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @journal do |f| %>

        <%= f.label :name %>
        <%= f.text_field :name %><br>

        <%= f.label :website %>
        <%= f.text_field :website %><br>

        <%= f.label :open_source %>
        <%= f.select :open_source, [['Yes', true], ['No', false], ], { :include_blank => true } %><br>
        <br>

      <%= f.submit "Add Journal" %>

<% end %>