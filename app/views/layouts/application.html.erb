<!DOCTYPE html> 
<html>
  <head>
    <title>ResearchArticleOrganizer</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>  </head>

  <body>

    <div> 
      <% if logged_in? %>
        <%= link_to "Add a Research Goal", new_research_goal_path %> | 
        <%= link_to "All Research Goals", research_goals_path %> | 
        <%= link_to "Logout", logout_path, method: "delete"  %>
      <% else %>
        <%= link_to "Sign Up", signup_path %> |
        <%= link_to "Log In", login_path %>
      <% end %>
    </div>

    <div><%= flash[:message] if flash[:message]%></div>

    <%= yield %>

  </body>

</html>